/**
 * FXML Controller class
 *
 * @author USER
 */
public class LoginController implements Initializable {

    @FXML
    private JFXButton Login;
    Utilites utilites= new Utilites();
    @FXML
    private ImageView imgLogin;
   @FXML
    private JFXTextField loginText;
    @FXML
    private JFXTextField pwdText;
    
    private UtilisateurServicesRemote utilisateurServiceRemote;
    @FXML
    private Label errorText;

    /**
     * Initializes the controller class.
     */
    @Override
    public void initialize(URL url, ResourceBundle rb) {
    	Image img= new Image("Assets/MSI-Group.jpg") ;
    	imgLogin.setImage(img);
    	Context context;
		try {
			context = new InitialContext();
	    	this.utilisateurServiceRemote=  (UtilisateurServicesRemote) context.lookup("MedicaSud-ear/MedicaSud-service/UtilisateurServices!tn.MedicaSud.services.UtilisateurServicesRemote"); 

		} catch (NamingException e) {
			
			e.printStackTrace();
		}
    }    
   private void GoAcceuil(ActionEvent event) throws IOException {
    	 Accueil_clientController accueil_clientController= new Accueil_clientController();
         Utilisateur utilisateur= new Utilisateur();
         /*utilisateur.setEmail(loginText.getText());
         utilisateur.setPassword(pwdText.getText());*/
         utilisateur= utilisateurServiceRemote.login(loginText.getText(), pwdText.getText());
        if(utilisateur!=null)
        {  utilites.newStage(Login, "Accueil_client.fxml","accueil");
         System.out.println(Accueil_clientController.utilisateurConnecte.getEmail());}
        else
        {
        	
        }

    }
    
}
